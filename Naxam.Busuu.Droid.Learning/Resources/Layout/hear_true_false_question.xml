<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="nghiaanhit.naxam.com.createtocreatexml.HearTrueFalseQuestion">

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

      <Naxam.Busuu.Droid.Learning.Control.NXPlayButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="My name is Peter" />
    </LinearLayout>
  </FrameLayout>

  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:text="This sentence needs a question mark."
        android:textAlignment="center"
        android:textColor="#163EFA" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:orientation="horizontal">

      <Button
          android:id="@+id/bt_wrong"
          android:layout_width="104dp"
          android:layout_height="104dp"
          android:layout_marginRight="56dp"          
          android:background="@drawable/corner_button_white"          
          android:text="TRUE"/>

      <Button
          android:id="@+id/bt_right"
          android:layout_width="104dp"
          android:layout_height="104dp"
          android:background="@drawable/corner_button_white"
          android:text="FALSE"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:background="@drawable/corner_button_green"
        android:text="CONTINUE"/>
  </FrameLayout>
</LinearLayout>
