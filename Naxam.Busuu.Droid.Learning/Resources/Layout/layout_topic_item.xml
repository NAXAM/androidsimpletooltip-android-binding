<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#C4E4FD"
  android:orientation="vertical">
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="#777777"
        android:textSize="20sp"
      android:layout_gravity="center"
      android:text="I am happy"
        />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:layout_gravity="center"
      android:textColor="#e13a4249"
      android:alpha="0.8"
        android:textSize="14sp"
      android:text="4 minutes"
        />
  <Naxam.Busuu.Droid.Learning.Control.NXRecyclerView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:scrollbars="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:numColumns="auto_fit"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        android:orientation="horizontal"
        android:background="@drawable/background_strike_line_white_padding"
        app:MvxItemTemplate="@layout/layout_exercise_item"
        app:MvxBind="ItemsSource Exercises" />
</LinearLayout>
