<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:background="#F0F5F8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="18dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="#4EA1DA"
        android:id="@+id/txtGuide"
        android:layout_width="match_parent"
        android:layout_height="32dp" />
    <TextView
        android:background="@drawable/dotted"
        android:id="@+id/txt01"
        android:layout_below="@id/txtGuide"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/txt02"
        android:background="@drawable/dotted"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:layout_below="@id/txt01"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/txt03"
        android:textColor="#000000"
        android:background="@drawable/dotted"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:layout_below="@id/txt02"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/txt01Move"
        android:textColor="#000000"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:text="Fine, Thanks"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignBaseline="@+id/txt01"
        android:layout_alignBottom="@+id/txt01"
        android:layout_alignLeft="@+id/txt01"
        android:layout_alignStart="@+id/txt01" />
    <TextView
        android:id="@+id/txt02Move"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:layout_below="@id/txt01"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/txt03Move"
        android:textColor="#000000"
        android:background="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:layout_below="@id/txt02"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/txt04"
        android:textColor="#000000"
        android:background="#D6DFE6"
        android:textSize="20dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@+id/txt03"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/txt05"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:background="#D6DFE6"
        android:layout_below="@id/txt04"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <TextView
        android:id="@+id/txt06"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="#D6DFE6"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:layout_below="@id/txt05"
        android:layout_width="match_parent"
        android:layout_height="56dp" />
    <Button
        android:id="@+id/btnContinue"
        android:text="Tiếp tục"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp" />
</RelativeLayout>