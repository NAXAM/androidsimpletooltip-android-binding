<?xml version="1.0" encoding="utf-8"?>
<Naxam.Busuu.Droid.Learning.Control.LessonHeaderBackground
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  app:BackgroundColor="#58B0F8"
  android:layout_height="96dp"
  app:MvxBind="BackgroundColor Color"
  >



  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:background="@drawable/background_circle_white"
      android:layout_marginLeft="16dp"
      android:layout_gravity="center_vertical"
        />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="112dp"
      android:orientation="vertical"
        >
    <TextView
         android:id="@+id/txtLesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
         app:MvxBind="Text Name"
          android:textColor="#3791CE"
        android:text="Lesson 1"
            />
    <TextView
      android:id="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:textColor="#3791CE"
        android:textSize="18sp"
        app:MvxBind="Text Title"
        android:text="Hello"
            />
  </LinearLayout>
  <ImageView
      android:id="@+id/btnDownload"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_gravity="center_vertical|right"
      android:layout_marginRight="16dp"
      android:src="@drawable/ic_download"
      android:tint="#CCCCCC"
        />
</Naxam.Busuu.Droid.Learning.Control.LessonHeaderBackground>
