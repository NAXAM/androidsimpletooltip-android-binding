<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E5E8ED"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="saulmm.myapplication.Notification">
  <MvvmCross.Droid.Support.V7.RecyclerView.MvxRecyclerView
        android:id="@+id/people_recycler_view"
				android:scrollbars="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:MvxItemTemplate="@layout/item_notification"
				app:MvxBind="ItemsSource NotificationData;ItemClick ViewNotificationCommand" />

</LinearLayout>
